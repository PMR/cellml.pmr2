<div id="model-searchbox"
     i18n:domain="cellml.pmr2">
    <form name="searchmodelform"
          action="search_model"
          class="searchModel"
          tal:attributes="action string:${view/site_url}/cellml_search">

        <label for="SearchCellML" class="hiddenStructure"
                    i18n:translate="search_model">Search Models</label>

        <input name="SearchableText"
               id="SearchableText"
               type="text"
               size="18"
               value=""
               title="Search"
               placeholder="Search Models"
               accesskey="4"
               i18n:attributes="title title_search;"
               tal:attributes="value request/SearchableText|nothing;
                               id view/search_input_id;"
               class="inputLabel" />

    </form>

</div>
