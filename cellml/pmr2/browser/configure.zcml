<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="pmr2">

  <!-- Browser pages -->

  <browser:page
      for="pmr2.app.exposure.interfaces.IExposureFile"
      name="basic_mathml"
      class=".view.BasicMathMLNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.exposure.interfaces.IExposureFile"
      name="cellml_math"
      class=".view.CellMLMathNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.exposure.interfaces.IExposureFile"
      name="basic_ccode"
      class=".view.BasicCCodeNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.exposure.interfaces.IExposureFile"
      name="cmeta"
      class=".view.CmetaNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.exposure.interfaces.IExposureFile"
      name="cellml_codegen"
      class=".view.CellMLCodegenNoteView"
      permission="zope2.View"
      />

  <browser:page
      for="pmr2.app.exposure.interfaces.IExposureFile"
      name="opencellsession"
      class=".view.OpenCellSessionNoteView"
      permission="zope2.View"
      />

  <!--
    CellML requires application specific view.
  -->
  <browser:page
      for="pmr2.app.workspace.interfaces.IWorkspace"
      name="pcenv"
      class=".view.WorkspaceRawfileXmlBasePCEnvView"
      permission="zope2.View"
      />

  <!--
    PMR1 Compatibility View
  -->

  <browser:page
      for="Products.CMFCore.interfaces.IFolderish"
      name="pmr1_folder_listing"
      template="pmr1_folder_listing.pt"
      permission="zope2.View"
      />

  <!--
    Viewlets
  -->

  <browser:viewlet
      name="cellml.pmr2.search"
      manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
      class=".viewlets.CellMLSearchViewlet"
      layer="..interfaces.ICellMLPMR2Layer"
      permission="zope2.View"
      />

</configure>
